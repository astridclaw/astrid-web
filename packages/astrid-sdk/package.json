{
  "name": "@gracefultools/astrid-sdk",
  "version": "0.8.0",
  "description": "Astrid.cc SDK \u2014 AI agent integration and OpenClaw channel plugin",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "astrid-agent": "./dist/bin/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "openclaw.plugin.json"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "ai",
    "agent",
    "claude",
    "openai",
    "gemini",
    "coding",
    "automation",
    "astrid"
  ],
  "author": "Astrid",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Graceful-Tools/astrid-res-www.git",
    "directory": "packages/astrid-sdk"
  },
  "homepage": "https://astrid.cc",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "dotenv": "^16.3.1",
    "glob": "^10.3.10"
  },
  "peerDependencies": {
    "express": "^4.18.0 || ^5.0.0",
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    },
    "express": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}