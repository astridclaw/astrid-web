{
  "$schema": "./astrid-config.schema.json",
  "version": "1.0",
  "projectName": "My Project",
  "description": "Brief description of your project for AI agents",

  "structure": {
    "web": {
      "description": "Web application",
      "root": ".",
      "patterns": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
      "directories": ["src/", "components/", "lib/", "app/"]
    }
  },

  "platforms": [
    {
      "name": "ios",
      "keywords": ["ios", "swift", "xcode", "iphone", "ipad", "testflight"],
      "filePatterns": ["ios/**/*.swift", "ios-app/**/*.swift"],
      "hints": [
        "iOS source files are in the ios/ or ios-app/ directory",
        "Use Xcode project structure conventions"
      ]
    },
    {
      "name": "android",
      "keywords": ["android", "kotlin", "gradle", "apk"],
      "filePatterns": ["android/**/*.kt", "android/**/*.java"],
      "hints": [
        "Android source files are in the android/ directory",
        "Use Android project structure conventions"
      ]
    },
    {
      "name": "web",
      "keywords": ["web", "react", "next", "vue", "frontend", "ui", "component"],
      "filePatterns": ["**/*.tsx", "**/*.ts", "src/**/*"],
      "hints": []
    }
  ],

  "agent": {
    "planningTimeoutMinutes": 10,
    "executionTimeoutMinutes": 15,
    "maxPlanningIterations": 30,
    "maxExecutionIterations": 50,
    "additionalContext": ""
  },

  "protectedPaths": [
    ".env",
    ".env.local",
    "*.pem",
    "*.key",
    "secrets/"
  ],

  "customInstructions": ""
}
